                                                <tr class="table-row">
                                                    <td class="column-name">
                                                        <t t-set="serial_number" t-value="serial_number + 1" />
                                                        <t t-esc="serial_number" />
                                                    </td>
                                                    <td class="column-name">
                                                        <t t-esc="pro.default_code" />
                                                    </td>
                                                    <td class="column-name">
                                                        <t t-esc="pro.name['en_US']" />
