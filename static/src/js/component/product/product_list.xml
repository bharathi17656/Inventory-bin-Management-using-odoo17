<templates>
    <t t-name="ProductPage" >
        <div class="headbody">
            <div class="right-page-product">
            <div t-att-class="state.popupmode ? 'twogrid1-user main-popup-hidden' : 'twogrid1-user' ">
               
                    <div class="bin-form-user" style="height: 79vh !important;">
